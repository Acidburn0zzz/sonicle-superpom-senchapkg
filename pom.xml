<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.sonicle.maven</groupId>
    <artifactId>sonicle-superpom-senchapkg</artifactId>
    <version>5</version>
    <packaging>pom</packaging>
	
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
	
	<build>
		<resources>
			<resource>
				<directory>src/sencha/${sencha.package.name}/src</directory>
				<excludes>
					<exclude>**/*</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/sencha/${sencha.package.name}/sass/src</directory>
				<excludes>
					<exclude>**/*</exclude>
				</excludes>
			</resource>
		</resources>
		
		<plugins>
			<!--
			<plugin>
				<groupId>com.pyx4j</groupId>
				<artifactId>maven-junction-plugin</artifactId>
				<version>1.0.3</version>
				<executions>
					<execution>
						<id>sencha-package-link</id>
						<goals>
							<goal>link</goal>
						</goals>
						<phase>none</phase>
						<configuration>
							<links>
								<link>
									<src>src/sencha/${sencha.package.name}</src>
									<dst>${env.SENCHA_WORKSPACE}/packages/local/${sencha.package.name}</dst>
								</link>
							</links>
						</configuration>
					</execution>
					<execution>
						<id>sencha-package-unlink</id>
						<goals>
							<goal>unlink</goal>
						</goals>
						<phase>none</phase>
						<configuration>
							<links>
								<link>
									<src>src/sencha/${sencha.package.name}</src>
									<dst>${env.SENCHA_WORKSPACE}/packages/local/${sencha.package.name}</dst>
								</link>
							</links>
						</configuration>
					</execution>
				</executions>
			</plugin>
			-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.8</version>
				<executions>
					<execution>
						<id>sencha-package-build</id>
						<goals>
							<goal>run</goal>
						</goals>
						<phase>none</phase>
						<configuration>
							<target>
								<taskdef resource="com/sencha/ant/antlib.xml" classpath="${env.SENCHA_CMD_6}/sencha.jar" loaderref="senchaloader" />
								<x-sencha-init dir="${env.SENCHA_WORKSPACE}/packages/local/${sencha.package.name}"/>
								<x-sencha-command dir="${env.SENCHA_WORKSPACE}/packages/local/${sencha.package.name}">
									package
									build
								</x-sencha-command>
							</target>	
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.5</version>
				<executions>
					<execution>
						<id>copy-sencha-build</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>none</phase>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}/client/extjs/packages/${sencha.package.name}</outputDirectory>
							<resources>
								<resource>
									<directory>src/sencha/${sencha.package.name}/build</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-src</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<phase>none</phase>
						<configuration>
							<outputDirectory>${project.build.outputDirectory}/client/extjs/packages/${sencha.package.name}/src</outputDirectory>
							<resources>
								<resource>
									<directory>src/sencha/${sencha.package.name}/src</directory>
									<includes>
										<include>**/*.js</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>3.0.0</version>
				<executions>
					<execution>
						<id>clean-sencha-build</id>
						<goals>
							<goal>clean</goal>
						</goals>
						<phase>none</phase>
						<configuration>
							<excludeDefaultDirectories>true</excludeDefaultDirectories>
							<filesets>
								<fileset>
									<directory>src/sencha/${sencha.package.name}/build</directory>
								</fileset>
							</filesets>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>	
	
	<profiles>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<skip.js>1</skip.js>
			</properties>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>sencha-package-build</id>
								<phase>compile</phase>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-sencha-build</id>
								<phase>prepare-package</phase>
							</execution>
							<execution>
								<id>copy-src</id>
								<phase>prepare-package</phase>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<executions>
							<execution>
								<id>clean-sencha-build</id>
								<phase>package</phase>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		
		<profile>
			<id>production</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<skip.js>0</skip.js>
			</properties>
			<build>
				<plugins>
					<!--
					<plugin>
						<artifactId>maven-junction-plugin</artifactId>
						<executions>
							<execution>
								<id>sencha-package-link</id>
								<phase>initialize</phase>
							</execution>
						</executions>
					</plugin>
					-->
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>sencha-package-build</id>
								<phase>compile</phase>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-resources-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-sencha-build</id>
								<phase>prepare-package</phase>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-clean-plugin</artifactId>
						<executions>
							<execution>
								<id>clean-sencha-build</id>
								<phase>package</phase>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>